#!/bin/sh

exec /usr/bin/flatpak run \
        --user \
        --branch=stable \
        --arch=x86_64 \
        --nofilesystem=host \
        --nofilesystem=/tmp \
        --filesystem=xdg-run/app/org.keepassxc.KeePassXC \
        --filesystem=xdg-config/keepassxc \
        --filesystem=~/Nextcloud/Backups/Keepass \
    org.keepassxc.KeePassXC "$@"
