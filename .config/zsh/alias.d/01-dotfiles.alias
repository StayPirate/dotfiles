alias dotfiles="git --git-dir=\"${HOME}/.config/dotfiles/public\" --work-tree=\"${HOME}\""
alias dotfiles-private="git --git-dir=\"${HOME}/.config/dotfiles/private\" --work-tree=\"${HOME}\""
alias dotfiles-root="sudo -E git --git-dir=\"${HOME}/.config/dotfiles/root\" --work-tree=/"
alias dot=dotfiles
alias dotp=dotfiles-private
alias dotr=dotfiles-root
alias d=dotfiles
alias dp=dotfiles-private
alias dr=dotfiles-root
